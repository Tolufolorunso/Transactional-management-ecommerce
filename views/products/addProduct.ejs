<% layout('layouts/boilerplate') %>
<section class="auth mt-3 mb-lg-5">
  <div class="container">
    <div class="text-center">
      <h2>Add Product</h2>
      <p class="lead">Lorem ipsum dolor sit amet consectetur facere.</p>
    </div>
    <div class="row justify-content-center my-2">
      <div class="col-lg-5">
        <form
          action="/products"
          method="POST"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" class="form-control" placeholder="title" required name="title" />
          </div>
          <div class="mb-3">
            <label for="images" class="form-label">Choose Images</label>
            <input type="file" id="images" name="images" class="form-control" required multiple />
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              id="price"
              name="price"
              class="form-control"
              placeholder="eg 1000"
              required
              min="1"
            />
          </div>
          <div class="mb-3">
            <label for="stock" class="form-label">In stock</label>
            <input
              type="number"
              id="stock"
              name="stock"
              class="form-control"
              placeholder="Number items to sell"
              required
              min="1"
            />
          </div>
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="category" id="category" class="form-select form-select-lg">
              <option selected>Select item category</option>
              <option value="female">female</option>
              <option value="male">male</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              id="description"
              class="form-control"
              placeholder="product description"
              required
              name="description"
              rows="4"
            ></textarea>
          </div>
          <div class="d-grid mb-3">
            <input type="submit" value="Add Product" class="btn btn-success btn-lg" />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
