<% layout('layouts/boilerplate') %>
<section class="auth mt-3 mb-lg-5">
  <div class="container">
    <div class="text-center">
      <h2>Update Product</h2>
      <p class="lead">Lorem ipsum dolor sit amet consectetur facere.</p>
    </div>
    <div class="row justify-content-center my-2">
      <div class="col-lg-5">
        <form
          action="/products/<%= product._id %>?_method=PUT"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              id="title"
              class="form-control"
              placeholder="title"
              required
              name="title"
              value="<%= product.title %>"
            />
          </div>
          <div class="mb-3">
            <label for="imageUrl">imageUrl</label>
            <input
              type="text"
              id="imageUrl"
              name="imageUrl"
              class="form-control"
              required
              value="<%= product.imageUrl %>"
            />
          </div>
          <div class="mb-3">
            <label for="price">Price</label>
            <input
              type="number"
              id="price"
              name="price"
              class="form-control"
              placeholder="eg 1000"
              required
              min="1"
              value="<%= product.price %> "
            />
          </div>
          <div class="mb-3">
            <label for="stock">In stock</label>
            <input
              type="number"
              id="stock"
              name="stock"
              class="form-control"
              placeholder="Number items to sell"
              required
              min="1"
              value="<%= product.stock %> "
            />
          </div>
          <div class="mb-3">
            <label for="category">Category</label>
            <select name="category" id="category" class="form-select form-select-lg">
              <option value="<%= product.category %> " selected><%= product.category %></option>
              <option value="female">female</option>
              <option value="male">male</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              id="description"
              class="form-control"
              placeholder="product description"
              required
              name="description"
              rows="4"
            >
          <%= product.description %>
          </textarea
            >
          </div>
          <div class="d-grid mb-3">
            <input type="submit" value="Add Product" class="btn btn-success btn-lg" />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
