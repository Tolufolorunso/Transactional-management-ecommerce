<%- include('../partials/userHeader') %>

<section class="auth mt-3 mb-lg-5">
  <div class="container">
    <div class="text-center">
      <h2>Login</h2>
      <p class="lead">Lorem ipsum dolor sit amet consectetur facere.</p>
    </div>
    <div class="row justify-content-center my-2">
      <div class="col-lg-5">
        <form action="/login" method="POST" class="needs-validation" novalidate>
          <div class="mb-3 form-floating">
            <input
              type="email"
              id="email"
              class="form-control"
              placeholder="eg@studentvend.com"
              name="username"
              required
            />
            <label for="email">Email</label>
            <div class="invalid-feedback">enter valid email</div>
          </div>
          <div class="mb-3 form-floating">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="*******"
              required
            />
            <label for="password">Password</label>
            <div class="invalid-feedback">enter valid password</div>
          </div>

          <div class="form-check mb-3">
            <input type="checkbox" name="remember-me" id="remember-me" class="form-check-input" />
            <label for="remember-me" class="form-check-label">Remember me</label>
          </div>
          <div class="d-grid mb-3">
            <input type="submit" value="Login" class="btn btn-success btn-lg" />
          </div>
          <div class="text-center mb-5">
            <div class="lead fs-6 fw-light">
              Already have an account? <a href="/register"><span class="text-success">Sign Up</span></a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
